{
  "name": "@claudecam/hook",
  "version": "0.1.4",
  "description": "Ultra-lightweight CLI binary for Claude Code hooks",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "cam-hook": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepack": "pnpm run build"
  },
  "dependencies": {
    "@claudecam/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pedropauloai/claude-agent-monitor.git",
    "directory": "packages/hook"
  },
  "homepage": "https://github.com/pedropauloai/claude-agent-monitor",
  "bugs": "https://github.com/pedropauloai/claude-agent-monitor/issues",
  "keywords": [
    "claude",
    "agent",
    "monitor",
    "observability",
    "claude-code"
  ],
  "author": "CAM Contributors",
  "publishConfig": {
    "access": "public"
  }
}
