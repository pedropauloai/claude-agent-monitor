{
  "name": "claude-agent-monitor",
  "version": "1.0.0",
  "description": "Mission Control for Claude Code agents: real-time observability + visual PRD/Sprint tracking",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["better-sqlite3"]
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "prepublish:all": "pnpm build",
    "publish:all": "pnpm -r publish --access public --no-git-checks"
  }
}
