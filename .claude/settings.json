{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "command": "sh .claude/hooks/block-secrets.sh"
      },
      {
        "matcher": "Bash",
        "command": "sh .claude/hooks/block-dangerous-commands.sh"
      },
      {
        "matcher": "*",
        "command": "node packages/hook/dist/index.js pre-tool-use"
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "command": "sh .claude/hooks/auto-format.sh"
      },
      {
        "matcher": "*",
        "command": "node packages/hook/dist/index.js post-tool-use"
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "command": "node packages/hook/dist/index.js notification"
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "command": "node packages/hook/dist/index.js stop"
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "command": "node packages/hook/dist/index.js subagent-stop"
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "command": "node packages/hook/dist/index.js pre-compact"
      }
    ],
    "PostCompact": [
      {
        "matcher": "*",
        "command": "node packages/hook/dist/index.js post-compact"
      }
    ]
  }
}
