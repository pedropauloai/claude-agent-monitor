{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "command": "sh .claude/hooks/block-secrets.sh"
      },
      {
        "matcher": "Bash",
        "command": "sh .claude/hooks/block-dangerous-commands.sh"
      },
      {
        "matcher": "*",
        "command": "cam-hook pre-tool-use"
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "command": "sh .claude/hooks/auto-format.sh"
      },
      {
        "matcher": "*",
        "command": "cam-hook post-tool-use"
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "command": "cam-hook notification"
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "command": "cam-hook stop"
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "command": "cam-hook subagent-stop"
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "command": "cam-hook pre-compact"
      }
    ],
    "PostCompact": [
      {
        "matcher": "*",
        "command": "cam-hook post-compact"
      }
    ]
  }
}
